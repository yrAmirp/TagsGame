@keyframes shake {
  0% { transform: translate(1px, 1px) rotate(0deg); }
  10% { transform: translate(-1px, -2px) rotate(-1deg); }
  20% { transform: translate(-3px, 0px) rotate(1deg); }
  30% { transform: translate(3px, 2px) rotate(0deg); }
  40% { transform: translate(1px, -1px) rotate(1deg); }
  50% { transform: translate(-1px, 2px) rotate(-1deg); }
  60% { transform: translate(-3px, 1px) rotate(0deg); }
  70% { transform: translate(3px, 1px) rotate(-1deg); }
  80% { transform: translate(-1px, -1px) rotate(1deg); }
  90% { transform: translate(1px, 2px) rotate(0deg); }
  100% { transform: translate(1px, -2px) rotate(-1deg); }
}
body,
html {
    font: 16px/1.4 'Klee One', cursive;
}
.page {
  max-width 400px
  padding 2rem  
  margin 0px auto
  text-align center
  user-select: none
}
h1
  font 600 3rem/1.2 'Klee One', cursive;
  margin-bottom 1em

.tags
  width 100%
  padding-bottom: 100%
  background-color: rgb(209, 209, 209)
  margin-bottom 1.5rem
  position relative
  .item
    font 400 2rem/1.2 'Klee One', cursive;
    position: absolute;
    left 0
    top 0
    width 25%
    height 25%
    margin 0
    padding 0
    border none
    outline none
    background-color rgb(109, 109, 109)
    color #f0f0f0
    box-shadow: inset 0 0 0 2px #d4d4d4
    font-size 2rem
    cursor pointer
    transition: all .3s
    &Val
      display flex
      align-items center
      justify-content center
      width 84%
      height: 84%
      margin 8%
      box-shadow: inset 0 0 0 2px #464646
      
    
.mix
  color #f0f0f0
  background-color rgb(109, 109, 109)
  font 400 2rem/1.2 'Klee One', cursive;
  border none
  cursor pointer
  padding 0.5em 1.5em
  transition all .3s
  &:hover
    color #6d6d6d
    background-color #f0f0f0
    animation shake .5s linear infinite;

.won
  display none
  align-items center
  justify-content center
  font-size 3em
  background-color rgba(49, 49, 49, 0.74)
  color #cfcfcf
  width: 100%
  height 100%
  position fixed
  top: 0
  left: 0

.game
  &Shuffle
    pointer-events: none;
    opacity 0.9

@keyframes anim-rotate 
  to
    transform: rotateZ(900deg);
    opacity: 0;
  
@media (max-width:375px)
  .mix
    padding: 0.5em 0.5em;
  .tags .item
    font-size: 1.5rem;
  .page h1
    font-size 2.5rem